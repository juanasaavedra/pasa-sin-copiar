# Server Configuration
PORT=3000

# Google Calendar API
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3000/oauth2callback
GOOGLE_REFRESH_TOKEN=your_refresh_token

# Google Calendar Public Embed URL (optional)
# If provided, this will be used to embed a calendar on the tutorias page
# Example: https://calendar.google.com/calendar/embed?src=YOUR_CALENDAR_ID
NEXT_PUBLIC_GOOGLE_CALENDAR_URL=
GOOGLE_CALENDAR_URL=

# Email Configuration (using Gmail)
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password

# Payment Configuration
PAYMENT_BASE_URL=https://tu-plataforma-de-pago.com/checkout

# Application URL
APP_URL=http://localhost:3000
